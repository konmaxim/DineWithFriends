}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Home Page</title>
    <link href="https://fonts.googleapis.com/css?family=Poppins&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/testdesign2.css">
</head>
<body>
    <div class="container-fluid mainCont d-flex justify-content-center align-items-center vh-90">
        <div class="row w-100 main-box gx-0">

            <!-- Sidebar -->
            <nav class="col-12 col-md-2 sidebar d-flex flex-md-column align-items-center text-center py-4">
                <div class="mb-3 d-none d-md-block">
                    <img src="~/Images/ryangosling.jpeg" class="img-fluid profile-image" alt="Profile">
                </div>
                <div class="nav flex-row flex-md-column w-100 justify-content-around justify-content-md-between align-items-center flex-grow-1">
                    <button class="btn btn-orange mb-md-3"><i class="bi bi-plus fs-3"></i></button>
                    <button class="btn btn-orange mb-md-3"><i class="bi bi-pencil-fill fs-3"></i></button>
                    <button class="btn btn-orange mb-md-3"><i class="bi bi-trash-fill fs-3"></i></button>
                    <button class="btn btn-orange mb-md-3">
                        <img src="~/Images/restaurant-menu-svgrepo-com.svg" class="img-fluid menu-icon" alt="Menu">
                    </button>
                    <button class="btn btn-orange settings-btn mt-md-auto"><i class="bi bi-gear-fill fs-3"></i></button>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="col-12 col-md-10 bg-secondary text-white p-4 overflow-auto" >
                <!-- Hero -->
                <section class="row align-items-centertext-dark rounded p-3 mb-4" style="background-color:#FA8072;">
                    <div class="col-12 col-lg-8 socialDiv" >
                        <h1 class="display-6">It's better with friends</h1>
                        <p style="margin-top:30px;">Make your next get-together extra special by requesting your favorite meals.</p>
                        <a href="#" class="btn socialbutton">Go to Social Hub</a>
                    </div>
                    <div class="col-12 col-lg-4 text-center text-lg-end">
                        <img src="~/Images/235b778d-b0b9-4599-9acd-ccf27d1a02f2-removebg-preview.png" class="img-fluid" alt="Illustration">
                    </div>
                </section>

                <!-- Dishes -->
                <section>
                    <h2 class="h4 mb-3">My Dishes</h2>
                    <div class="row g-3">
                        <div class="col-6 col-md-4 col-lg-3">
                            <div class="card bg-dark text-white h-100">
                                <img src="~/Images/borsch1.jpg" class="card-img-top img-fluid" alt="Borsch">
                                <div class="card-body">
                                    <h5 class="card-title">Borsch</h5>
                                    <p class="card-text">Delicious beet soup with sour cream.</p>
                                    <a href="#" class="btn socialbutton btn-sm">View</a>
                                </div>
                            </div>
                        </div>
                        <!-- Repeat cards as needed -->
                    </div>
                </section>
            </main>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>