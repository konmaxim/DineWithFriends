@using Microsoft.AspNetCore.Identity


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - MyApp</title>
    <link href="https://fonts.googleapis.com/css?family=Poppins&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/testdesign2.css" />
</head>
<body>
    <div class="container-fluid mainCont d-flex justify-content-center align-items-center vh-90">
        <div class="row w-100 main-box gx-0">

            <!-- Sidebar -->
            <nav class="col-12 col-md-2 sidebar d-flex flex-md-column align-items-center text-center py-4">
                <div class="mb-3 d-none d-md-block">
                    <img src="@ViewData["ProfilePictureUrl"]" class="img-fluid profile-image" alt="Profile" />
                </div>
                <div class="nav flex-row flex-md-column w-100 justify-content-around justify-content-md-between align-items-center flex-grow-1">
                    <button onclick="location.href='/Create'" class="btn btn-orange mb-md-3" type="button"><i class="bi bi-plus fs-3"></i></button>
                    <button onclick="location.href='/Friends'" class="btn btn-orange mb-md-3"><i class="bi bi-people-fill fs-3"></i></button>
                    <button class="btn btn-orange mb-md-3">
                        <img src="~/Images/restaurant-menu-svgrepo-com.svg" class="img-fluid menu-icon" alt="Menu" />
                    </button>
                    <div class="settings-wrapper">
                        <button id="settingsToggle" class="settings-btn btn btn-orange mb-md-3">
                            <i class="bi bi-gear-fill"></i>
                        </button>
                        <div id="settingsDropdown" class="dropdown-panel" aria-hidden="true">
                            <button class="dropdown-btn" onclick="location.href='/Identity/Account/Manage';">
                                <i class="bi bi-person-circle"></i> Manage Account
                            </button>
                            <form method="post" action="/Identity/Account/Logout">
                                <button type="submit" class="dropdown-btn text-danger">
                                    <i class="bi bi-box-arrow-right"></i> Log Out
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </nav>

            <!-- Page Content -->
            <main class="col-12 col-md-10 bg-secondary text-white p-4 overflow-auto">
                @RenderBody()
            </main>

        </div>
    </div>
    @RenderSection("Scripts", required: false)
</body>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
    const toggleBtn = document.getElementById('settingsToggle');
    const dropdown = document.getElementById('settingsDropdown');

    toggleBtn.addEventListener('click', () => {
        const isOpen = dropdown.classList.toggle('open');
        dropdown.setAttribute('aria-hidden', !isOpen);
    });

    document.addEventListener('click', (e) => {
        if (!toggleBtn.contains(e.target) && !dropdown.contains(e.target)) {
            dropdown.classList.remove('open');
            dropdown.setAttribute('aria-hidden', 'true');
        }
    });

    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') {
            dropdown.classList.remove('open');
            dropdown.setAttribute('aria-hidden', 'true');
        }
    });

</script>



</html>